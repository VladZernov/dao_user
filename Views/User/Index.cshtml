@model IEnumerable<DAOUserProject.DAL.Entity.User>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p class="create-button">
    <a asp-action="Create" class="btn btn-info btn">
        <span class="glyphicon glyphicon-plus"></span> Create New 
    </a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>      
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>       
                <th>
                    @Html.DisplayNameFor(model => model.EMail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Login)
                </th>   
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>                
                <th>
                    @Html.DisplayNameFor(model => model.Icq)
                </th>                                                            
                <th>
                    @Html.DisplayNameFor(model => model.Delivery)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </th>                
            <th style="width:200px;"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Icq)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Delivery)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td width="10%">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn">
                    <span class="glyphicon glyphicon-pencil"></span> Edit 
                </a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info btn">
                    <span class="glyphicon glyphicon-trash"></span> Delete 
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
